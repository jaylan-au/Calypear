
{{#with tranche}}
  <h1>{{id}}/{{name}}</h1>
  <form method="POST" action="/admin/tranche/{{id}}">
    <input type="hidden" name="id" value="{{id}}"/>
    <div class="row">
      <div class="twelve columns">
        <label for="fieldName">Name</label>
        <input type="text" class="u-full-width" id="fieldName" name="name" placeholder="Tranche Name" value="{{name}}" required/>
      </div>
    </div>
    <div class="row">
      <div class="twelve columns">
        <input type="submit" id="fieldSave" name="Save" value="Save"/>
        <a href="/admin/tranches" class="button">Cancel</a>
      </div>
    </div>
  </form>
{{/with}}
